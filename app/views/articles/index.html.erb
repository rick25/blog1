<h1>Listado de articulos</h1>

<div class="table-responsive">
	<table class="table table-bordered">
		<tr>
		    <th>Titulo</th>
		    <th>Texto</th>
		    <th colspan="3"><div class="text-center"> Opciones</div></th>
		</tr>
		 
		<% @articles.each do |article| %>
		<tr>
		    <td class="text-center"><%= article.title %></td>
		    <td class="text-center"><%= article.text %></td>
		    <td class="text-center">
		    	<%= link_to '<i class="fa fa-eye"></i> Mostrar'.html_safe, article_path(article), :class => 'btn btn-primary' %>
		    </td>
		    <td class="text-center">
		    	<%= link_to '<i class="fa fa-pencil fa-fw"></i> Editar'.html_safe, edit_article_path(article), :class => 'btn btn-warning' %>
		    </td>
		    <td class="text-center">
		    	<%= link_to '<i class="fa fa-trash-o fa-lg"></i> Destruir'.html_safe, 
		    		article_path(article),
			        method: :delete, :class => 'btn btn-danger',
			        data: { confirm: 'Estas seguro?' } %>
			</td>
		</tr>
		<% end %>
	</table><!-- fin table-bordered -->
</div><!-- fin table-responsive -->
<%= link_to 'Nuevo articulo', new_article_path, :class => 'btn btn-success' %>