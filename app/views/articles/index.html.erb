<h1>Listado de articulos</h1>
 
<table>
	<tr>
	    <th>Titulo</th>
	    <th>Texto</th>
	    <th colspan="3"></th>
	</tr>
	 
	<% @articles.each do |article| %>
	<tr>
	    <td><%= article.title %></td>
	    <td><%= article.text %></td>
	    <td><%= link_to 'Mostrar', article_path(article) %></td>
	    <td><%= link_to 'Editar', edit_article_path(article) %></td>
	    <td><%= link_to 'Destruir', article_path(article),
		              method: :delete,
		              data: { confirm: 'Estas seguro?' } %></td>
	</tr>
	<% end %>
</table>
<%= link_to 'Nuevo articulo', new_article_path %>