<div class="panel panel-primary">
	<div class="panel-heading">
		<%= @article.title %>
	</div>
	<div class="panel-body">
		<%= @article.text %>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Comentarios</h3>
	</div>
	<div class="panel-body">
		<div class="list-group">
			<%= render @article.comments %>
		</div><!-- fin list-group -->
	</div>
</div>

<h2>Agregar un comentario:</h2>
<%= render 'comments/form' %>
<%= link_to 'Volver', articles_path, :class => 'btn btn-primary boton-volver' %> | <%= link_to 'Editar', edit_article_path(@article), :class => 'btn btn-warning' %>